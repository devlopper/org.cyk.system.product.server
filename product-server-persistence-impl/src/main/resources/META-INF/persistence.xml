<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
  
    <persistence-unit name="productPersistenceUnit" transaction-type="JTA">
    	<jta-data-source>${data.source.jndi.name}</jta-data-source>
    	<class>org.cyk.system.product.server.persistence.entities.Input</class>
    	<class>org.cyk.system.product.server.persistence.entities.Product</class>
    	<class>org.cyk.system.product.server.persistence.entities.ProductInput</class>
    	<class>org.cyk.system.product.server.persistence.entities.ProductPropertyValue</class>
    	<class>org.cyk.system.product.server.persistence.entities.Property</class>
    	<class>org.cyk.system.product.server.persistence.entities.PropertyValue</class>
    	<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="${hibernate.hbm2ddl.auto}"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="false"/>
		</properties>

    </persistence-unit>  
</persistence>